<h1>New Card</h1>
<%= form_tag(cards_path, method: "POST", class: "create-new-slideshow-form") do %>
  <div class="form-group">
    <label for="name">Card Name</label>
    <input type="text" name="card[name]" class='form-control'>
  </div>
  <div class="form-group">
    <label for="name">Question</label>
    <input type="text" name="card[question]" class='form-control'>
  </div>
  <div class="form-group">
    <label for="name">Answer</label>
    <input type="text" name="card[answer]" class='form-control'>
  </div>
  <input type="submit">

<% end %>
