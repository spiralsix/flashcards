<h1>Listing Card Assignments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @card_assignments.each do |card_assignment| %>
      <tr>
        <td><%= link_to 'Show', card_assignment %></td>
        <td><%= link_to 'Edit', edit_card_assignment_path(card_assignment) %></td>
        <td><%= link_to 'Destroy', card_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

